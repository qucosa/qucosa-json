{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://www.qucosa.de/api/schemas/config.json",
  "type": "object",
  "additionalProperties": true,
  "definitions": {
    "URN": {
      "type": "string",
      "format": "uri",
      "pattern": "^urn:"
    },
    "Changes": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "before": {},
          "after": {}
        },
        "required": [
          "before",
          "after"
        ]
      }
    },
    "de.qucosa.event": {
      "required": [
        "de.qucosa.event.version",
        "de.qucosa.event.sourceID"
      ],
      "properties": {
        "de.qucosa.event.version": {
          "$id": "#/properties/de.qucosa.event.version",
          "type": "string",
          "pattern": "^[\\d]+(\\.[\\d]+)*$",
          "examples": [
            "1.0"
          ]
        },
        "de.qucosa.event.sourceID": {
          "$id": "#/properties/de.qucosa.event.sourceID",
          "$ref": "#/definitions/URN",
          "examples": [
            "urn:fcrepo3:sdvcmr-app03"
          ]
        }
      }
    },
    "de.qucosa.config": {
      "required": [
        "de.qucosa.config.uri"
      ],
      "properties": {
        "de.qucosa.config.uri": {
          "$id": "#/properties/de.qucosa.config.uri",
          "type": "string",
          "format": "uri",
          "examples": [
            "https://foo.bar/configuration/xml/2"
          ]
        },
        "de.qucosa.config.modified": {
          "$id": "#/properties/de.qucosa.config.modified",
          "type": "string",
          "format": "date-time",
          "examples": [
            "2018-11-13T20:20:39+00:00"
          ]
        },
        "de.qucosa.config.changes": {
          "$id": "#/properties/de.qucosa.config.changes",
          "$ref": "#/definitions/Changes",
          "examples": [
            {
              "aString": {
                "before": "this",
                "after": "that"
              },
              "anInteger": {
                "before": 123457786,
                "after": 4711
              },
              "aNumber": {
                "before": 3.14,
                "after": null
              },
              "anArray": {
                "before": [
                  "a",
                  "b"
                ],
                "after": [
                  "c"
                ]
              },
              "anObject": {
                "before": {
                  "a": "A"
                },
                "after": {
                  "a": "B"
                }
              }
            }
          ]
        }
      }
    }
  },
  "allOf": [
    {
      "$ref": "#/definitions/de.qucosa.event"
    },
    {
      "$ref": "#/definitions/de.qucosa.config"
    }
  ]
}