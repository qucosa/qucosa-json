{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://www.qucosa.de/api/schemas/control.json",
  "type": "object",
  "additionalProperties": true,
  "definitions": {
    "URN": {
      "type": "string",
      "format": "uri",
      "pattern": "^urn:"
    },
    "de.qucosa.event": {
      "required": [
        "de.qucosa.event.version",
        "de.qucosa.event.sourceID"
      ],
      "properties": {
        "de.qucosa.event.version": {
          "$id": "#/properties/de.qucosa.event.version",
          "type": "string",
          "pattern": "^[\\d]+(\\.[\\d]+)*$",
          "examples": [
            "1.0"
          ]
        },
        "de.qucosa.event.sourceID": {
          "$id": "#/properties/de.qucosa.event.sourceID",
          "$ref": "#/definitions/URN",
          "examples": [
            "urn:fcrepo3:sdvcmr-app03"
          ]
        }
      }
    },
    "de.qucosa.control": {
      "required": [
        "de.qucosa.control.targetID"
      ],
      "properties": {
        "de.qucosa.control.targetID": {
          "$id": "#/properties/de.qucosa.control.targetID",
          "$ref": "#/definitions/URN",
          "examples": [
            "urn:sitemap:register"
          ]
        },
        "de.qucosa.control.headers": {
          "$id": "#/properties/de.qucosa.control.headers",
          "type": "object",
          "minProperties": 1
        },
        "de.qucosa.control.message": {
          "$id": "#/properties/de.qucosa.control.message",
          "type": "object"
        }
      },
      "if": {
        "properties": {
          "de.qucosa.control.message": {
            "type": "null"
          }
        }
      },
      "then": {
        "required": [
          "de.qucosa.control.headers"
        ]
      }
    }
  },
  "allOf": [
    {
      "$ref": "#/definitions/de.qucosa.event"
    },
    {
      "$ref": "#/definitions/de.qucosa.control"
    }
  ]
}